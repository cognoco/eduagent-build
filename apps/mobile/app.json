{
  "expo": {
    "name": "EduAgent",
    "slug": "eduagent",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "eduagent",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "bundleIdentifier": "com.zwizzly.eduagent",
      "supportsTablet": true
    },
    "android": {
      "package": "com.zwizzly.eduagent",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0f0f0f"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0f0f0f"
        }
      ],
      ["expo-router", { "root": "./src/app" }]
    ],
    "extra": {
      "eas": {
        "projectId": "3a5f3e57-c57c-4b2d-bb78-eec6dbdd13fc"
      }
    },
    "owner": "zwizzly"
  }
}
