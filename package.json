{
  "name": "@eduagent/source",
  "version": "0.0.0",
  "license": "MIT",
  "engines": {
    "node": "22.x",
    "npm": "please-use-pnpm",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "build": "nx run-many -t build",
    "test": "nx run-many -t test",
    "test:coverage": "nx run-many -t test --coverage",
    "lint": "nx run-many -t lint",
    "format:check": "nx run-many -t format:check",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,scss,html}\"",
    "validate:research": "node tools/scripts/validate-research.js",
    "validate:governance": "node tools/gates/run-internal-alignment.mjs",
    "validate:env": "node scripts/validate-env.js",
    "prepare": "husky",
    "db:push:dev": "dotenv -e .env.development.local -- npx drizzle-kit push --config=packages/database/drizzle.config.ts",
    "db:generate": "dotenv -e .env.development.local -- npx drizzle-kit generate --config=packages/database/drizzle.config.ts",
    "db:migrate:dev": "dotenv -e .env.development.local -- npx drizzle-kit migrate --config=packages/database/drizzle.config.ts",
    "db:studio:dev": "dotenv -e .env.development.local -- npx drizzle-kit studio --config=packages/database/drizzle.config.ts"
  },
  "private": true,
  "dependencies": {
    "@expo/metro-config": "~54.0.9",
    "@expo/metro-runtime": "~6.1.2",
    "dotenv": "^16.4.5",
    "expo": "~54.0.0",
    "expo-splash-screen": "~31.0.11",
    "expo-status-bar": "~3.0.8",
    "expo-system-ui": "~6.0.8",
    "react": "19.1.0",
    "react-native": "0.81.5",
    "react-native-svg": "15.12.1",
    "react-native-svg-transformer": "~1.5.1"
  },
  "devDependencies": {
    "@babel/runtime": "~7.27.6",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/compat": "^1.1.1",
    "@eslint/eslintrc": "^2.1.1",
    "@eslint/js": "^9.8.0",
    "@expo/cli": "~54.0.16",
    "@nx/devkit": "22.2.0",
    "@nx/esbuild": "22.2.0",
    "@nx/eslint": "22.2.0",
    "@nx/eslint-plugin": "22.2.0",
    "@nx/expo": "22.2.0",
    "@nx/jest": "22.2.0",
    "@nx/js": "22.2.0",
    "@nx/node": "22.2.0",
    "@nx/react": "22.2.0",
    "@nx/workspace": "22.2.0",
    "@swc-node/register": "~1.9.1",
    "@swc/cli": "~0.6.0",
    "@swc/core": "^1.13.5",
    "@swc/helpers": "~0.5.11",
    "@swc/jest": "~0.2.38",
    "@testing-library/dom": "10.4.0",
    "@testing-library/react": "16.1.0",
    "@testing-library/react-native": "~13.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.0.0",
    "@types/react": "19.1.0",
    "babel-jest": "30.2.0",
    "babel-preset-expo": "~54.0.7",
    "dotenv-cli": "^11.0.0",
    "esbuild": "^0.19.2",
    "eslint": "9.37.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsx-a11y": "6.10.1",
    "eslint-plugin-react": "7.35.0",
    "eslint-plugin-react-hooks": "5.0.0",
